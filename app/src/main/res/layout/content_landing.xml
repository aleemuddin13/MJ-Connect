<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.ac.mjcet.mj_connect.LandingActivity"
    tools:showIn="@layout/activity_landing">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:id="@+id/adsophosButton"
                        android:background="@color/barosa"
                        android:src="@drawable/hero"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"/>
                       </TableRow>
                <TableRow>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray">

                    </View>

                </TableRow>

                <TableRow>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:id="@+id/syllabusButton"
                        android:src="@drawable/syllabus"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="@color/barosa"
                        style="?android:attr/buttonBarButtonStyle"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="200dp"
                        android:layout_weight="0"
                        android:background="@android:color/darker_gray"></View>

                    <!--</View>-->
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:src="@drawable/timetable"
                        android:scaleType="fitCenter"
                        android:background="@color/barosa"
                        android:id="@+id/timetableButton"
                        style="?android:attr/buttonBarButtonStyle"/>

                </TableRow>
                <TableRow>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray">

                    </View>

                </TableRow>
                <TableRow>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:id="@+id/previouspaperButton"
                        android:src="@drawable/previous"
                        android:background="@color/barosa"
                        android:scaleType="fitCenter"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="200dp"
                    android:layout_weight="0"
                    android:background="@android:color/darker_gray"></View>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:id="@+id/QRButton"
                        android:src="@drawable/qr"
                        android:background="@color/barosa"
                        android:scaleType="fitCenter"/>
                </TableRow>
                <TableRow>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray">

                    </View>

                </TableRow>
                <TableRow>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:id="@+id/aboutButton"
                        android:src="@drawable/about"
                        android:scaleType="fitCenter"
                        android:background="@color/barosa"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="200dp"
                    android:layout_weight="0"
                    android:background="@android:color/darker_gray"></View>

                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:id="@+id/reportButton"
                        android:src="@drawable/bug"
                        android:background="@color/barosa"
                        android:scaleType="fitCenter"/>
                </TableRow>
            </TableLayout>
        </ScrollView>

    </RelativeLayout>

